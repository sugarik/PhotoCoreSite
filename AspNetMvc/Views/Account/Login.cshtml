@using AspNetMvc.Models
@model LoginViewModel
@{
    ViewBag.Title = "Выполнить вход";
}

<div class="container">
    <div class="auth-main">
        <div class="registration-description">
            <span>Вход</span>
        </div>
        <div class="registration-with-socials">
            <span class="description">Через социальные сети</span>
            <div class="socials-buttons">
                <a href="">
                    <img src="~/images/facebook-button.png" alt="facebook">
                </a>
                <a href="">
                    <img src="~/images/google-button.png" alt="google">
                </a>
                <a href="">
                    <img src="~/images/vk-button.png" alt="vk">
                </a>
            </div>
        </div>
        <div class="registration-form">
            <span class="description">или через email</span>

            <div class="inputs">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Пароль" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    <div class="registration-button">
                        <input type="submit" value="Выполнить вход" class="" />
                    </div>
                }
            </div>
            <div class="manipulations">
                <a href="~/Account/ResetPassword">Забыл(а) пароль</a>
                <a href="~/Account/Register">Регистрация</a>
            </div>
        </div>
        <div class="TM-block">
            <span class="description">&#169; <span id="year"></span> PhotoBank</span>
        </div>
    </div>
</div>


